---
// src/components/TableSkeleton.astro
interface Props {
  rows?: number;
}

const { rows = 3 } = Astro.props;
const skeletonRows = Array.from({ length: rows }, (_, i) => i);
---

<div class="w-full max-w-6xl mx-auto">
  <!-- Encabezado con título fijo y loading state -->
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Enlaces generados</h2>
    <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
      <!-- Spinner -->
      <svg class="animate-spin w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="text-sm animate-pulse">Cargando enlaces...</span>
    </div>
  </div>

  <div class="space-y-4">
    <!-- Vista Desktop: Tabla Skeleton -->
    <div class="hidden md:block bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <!-- Header Skeleton -->
      <div class="grid grid-cols-12 gap-0 bg-gray-50 dark:bg-gray-900">
        <div class="col-span-7 px-4 py-3 border-r border-gray-200 dark:border-gray-700">
          <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-24 animate-pulse"></div>
        </div>
        <div class="col-span-5 px-4 py-3">
          <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-20 animate-pulse"></div>
        </div>
      </div>
      
      <!-- Rows Skeleton -->
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        {skeletonRows.map((_, index) => (
          <div class="grid grid-cols-12 gap-0 hover:bg-gray-50 dark:hover:bg-gray-700">
            <!-- URL Original Skeleton -->
            <div class="col-span-7 px-4 py-3 border-r border-gray-200 dark:border-gray-700">
              <div class={`h-4 bg-gray-200 dark:bg-gray-600 rounded animate-pulse`} 
                   style={`width: ${60 + Math.random() * 40}%; animation-delay: ${index * 0.1}s`}></div>
            </div>
            
            <!-- URL Corta Skeleton -->
            <div class="col-span-5 px-4 py-3">
              <div class="flex items-center justify-between">
                <div class={`h-8 bg-gray-200 dark:bg-gray-600 rounded flex-1 mr-2 animate-pulse`}
                     style={`animation-delay: ${index * 0.1 + 0.05}s`}></div>
                <div class="w-8 h-8 bg-gray-200 dark:bg-gray-600 rounded animate-pulse flex-shrink-0"
                     style={`animation-delay: ${index * 0.1 + 0.1}s`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Vista Móvil: Cards Skeleton -->
    <div class="md:hidden space-y-3">
      {skeletonRows.map((_, index) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden">
          <!-- URL Original Skeleton -->
          <div class="p-4 border-b border-gray-100 dark:border-gray-700">
            <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded w-16 mb-2 animate-pulse"
                 style={`animation-delay: ${index * 0.1}s`}></div>
            <div class={`h-4 bg-gray-200 dark:bg-gray-600 rounded animate-pulse mb-2`}
                 style={`width: ${80 + Math.random() * 20}%; animation-delay: ${index * 0.1 + 0.05}s`}></div>
            <div class={`h-4 bg-gray-200 dark:bg-gray-600 rounded animate-pulse`}
                 style={`width: ${40 + Math.random() * 30}%; animation-delay: ${index * 0.1 + 0.1}s`}></div>
          </div>
          
          <!-- URL Corta Skeleton -->
          <div class="p-4 bg-gray-50 dark:bg-gray-900/50">
            <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded w-20 mb-2 animate-pulse"
                 style={`animation-delay: ${index * 0.1 + 0.15}s`}></div>
            <div class="flex items-center gap-2">
              <div class="flex-1 h-9 bg-gray-200 dark:bg-gray-600 rounded animate-pulse"
                   style={`animation-delay: ${index * 0.1 + 0.2}s`}></div>
              <div class="w-9 h-9 bg-gray-200 dark:bg-gray-600 rounded animate-pulse flex-shrink-0"
                   style={`animation-delay: ${index * 0.1 + 0.25}s`}></div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>