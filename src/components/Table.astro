---
import { actions } from 'astro:actions';

// Obtener los enlaces usando la action
const result = await Astro.callAction(actions.getLinks, {})

// Validación más segura
const links = Array.isArray(result.data) ? result.data : [];

// URL base para enlaces cortos
const baseUrl = Astro.url.origin;
---

<!-- Tabla/Cards responsive -->
<div class="w-full max-w-6xl mx-auto">
  <!-- Encabezado -->
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Enlaces generados</h2>
    <p class="text-gray-600 dark:text-gray-400">
      Total: {links.length} enlace{links.length !== 1 ? 's' : ''}
    </p>
  </div>

  {links.length > 0 ? (
    <div class="space-y-4">
      <!-- Vista Desktop: Tabla Optimizada -->
      <div class="hidden md:block bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="grid grid-cols-12 gap-0 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider bg-gray-50 dark:bg-gray-900">
          <div class="col-span-7 px-4 py-3 border-r border-gray-200 dark:border-gray-700">URL Original</div>
          <div class="col-span-5 px-4 py-3">URL Corta</div>
        </div>
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
          {links.map((link) => (
            <div class="grid grid-cols-12 gap-0 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <!-- URL Original - 7 columnas -->
              <div class="col-span-7 px-4 py-3 border-r border-gray-200 dark:border-gray-700">
                <a 
                  href={link.originalUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  title={link.originalUrl}
                  class="text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 hover:underline block truncate text-sm"
                >
                  {link.originalUrl}
                </a>
              </div>
              
              <!-- URL Corta - 5 columnas -->
              <div class="col-span-5 px-4 py-3">
                <div class="flex items-center justify-between">
                  <a 
                    href={`/${link.shortCode}`} 
                    target="_blank"
                    class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-mono text-sm bg-blue-50 dark:bg-blue-900/20 px-2 py-1 rounded border border-blue-200 dark:border-blue-800 hover:border-blue-300 dark:hover:border-blue-700 transition-all flex-1 mr-2 truncate"
                  >
                    {baseUrl.replace('http://', '').replace('https://', '')}/{link.shortCode}
                  </a>
                  <button 
                    onclick={`
                      navigator.clipboard.writeText('${baseUrl}/${link.shortCode}');
                      this.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                      this.classList.add('text-green-500', 'bg-green-50', 'dark:bg-green-900/20');
                      setTimeout(() => { 
                        this.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>'; 
                        this.classList.remove('text-green-500', 'bg-green-50', 'dark:bg-green-900/20');
                      }, 2000);
                    `}
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-1.5 rounded border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 hover:border-gray-300 dark:hover:border-gray-500 flex-shrink-0"
                    title="Copiar enlace"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Vista Móvil: Cards Mejoradas -->
      <div class="md:hidden space-y-3">
        {links.map((link) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden">
            <!-- URL Original -->
            <div class="p-4 border-b border-gray-100 dark:border-gray-700">
              <div class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Original</div>
              <a 
                href={link.originalUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                title={link.originalUrl}
                class="text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 hover:underline text-sm break-all block"
              >
                {link.originalUrl}
              </a>
            </div>
            
            <!-- URL Corta -->
            <div class="p-4 bg-gray-50 dark:bg-gray-900/50">
              <div class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Enlace corto</div>
              <div class="flex items-center gap-2">
                <a 
                  href={`/${link.shortCode}`} 
                  target="_blank"
                  class="flex-1 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-mono text-sm bg-white dark:bg-gray-800 px-3 py-2 rounded border border-blue-200 dark:border-blue-800 hover:border-blue-300 dark:hover:border-blue-700 transition-all truncate"
                >
                  {baseUrl.replace('http://', '').replace('https://', '')}/{link.shortCode}
                </a>
                <button 
                  onclick={`
                    navigator.clipboard.writeText('${baseUrl}/${link.shortCode}');
                    this.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                    this.classList.add('text-green-500', 'bg-green-50', 'dark:bg-green-900/20', 'border-green-200', 'dark:border-green-800');
                    setTimeout(() => { 
                      this.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>'; 
                      this.classList.remove('text-green-500', 'bg-green-50', 'dark:bg-green-900/20', 'border-green-200', 'dark:border-green-800');
                    }, 2000);
                  `}
                  class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 rounded border border-gray-200 dark:border-gray-600 hover:bg-white dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-500 flex-shrink-0"
                  title="Copiar enlace"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  ) : (
    <!-- Estado vacío -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-12 text-center shadow-lg border border-gray-200 dark:border-gray-700">
      <div class="text-gray-400 dark:text-gray-500 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
        No hay enlaces aún
      </h3>
      <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto">
        Los enlaces que generes aparecerán aquí. ¡Crea tu primer enlace acortado!
      </p>
    </div>
  )}
</div>

<!-- No necesitamos JavaScript ya que no mostramos contadores -->
